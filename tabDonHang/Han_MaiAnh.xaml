                    <Button x:Name="btnLogout" Content="Đăng xuất" Click="btnLogout_Click" Width="150"/>
                </materialDesign:PopupBox>

            </StackPanel>
        </Grid>
        <Grid Margin="60,70,0,0" x:Name="GridDonHang">
            <dragablz:TabablzControl Margin="0,-26,0,0" FixedHeaderCount="2">
                <dragablz:TabablzControl.InterTabController>
                    <dragablz:InterTabController/>
                </dragablz:TabablzControl.InterTabController>

                <TabItem Header="TẠO HÓA ĐƠN">
                    <Grid>
                        <Label Content="Tên khách hàng" HorizontalAlignment="Left" Margin="89,90,0,0" Width="116" FontSize="14"/>
                        <TextBox x:Name="txtsoDienThoai" HorizontalAlignment="Left" Margin="243,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" />
                        <Label Content="Số điện thoại" HorizontalAlignment="Left" Margin="89,60,0,0" VerticalAlignment="Top" Width="116" FontSize="14" />
                        <TextBox x:Name="txttenKhachHang" HorizontalAlignment="Left" Margin="243,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" />
                        <Label Content="Địa chỉ" HorizontalAlignment="Left" Margin="89,120,0,0" VerticalAlignment="Top" Width="116" FontSize="14" />
                        <TextBox x:Name="txtdiaChi" HorizontalAlignment="Left" Margin="243,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126"/>

                        <Label Content="Phương thức &#xA;thanh toán" HorizontalAlignment="Left" Margin="89,210,0,0" VerticalAlignment="Top" Width="95" FontSize="14"  Height="46"/>
                        <RadioButton x:Name="radtienMat" Content="Tiền mặt" HorizontalAlignment="Left" Margin="243,210,0,0" VerticalAlignment="Top" Width="80" FontSize="14" />
                        <RadioButton x:Name="radchuyenKhoan" Content="Thẻ" HorizontalAlignment="Left" Margin="328,210,0,0" VerticalAlignment="Top" Width="80" FontSize="14" />
                        <Button x:Name="btntaoDonHang" Content="Tạo đơn hàng" HorizontalAlignment="Left" Margin="900,530,0,0" VerticalAlignment="Top" Height="30" FontSize="14" Width="150"  Click="btntaoDonHang_Click"/>
                        <Label Content="Ngày mua" HorizontalAlignment="Left" Margin="89,180,0,0" VerticalAlignment="Top" Width="116" FontSize="14"  RenderTransformOrigin="0.616,-1.891"/>

                        <Button x:Name="btnCheckSDT" Content="Kiểm tra" Margin="-120,60,0,0" VerticalAlignment="Top" Height="30" FontSize="14" Width="150" Click="btnCheckSDT_Click"/>
                        <Button x:Name="btnHuyTaoDonHang" Content="Hủy" Margin="-120,115,0,0"  VerticalAlignment="Top" Height="30" FontSize="14" Width="150" Click="btnHuyTaoDonHang_Click"/>
