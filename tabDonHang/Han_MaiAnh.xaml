                        <ListView x:Name="LsvDSMua" HorizontalAlignment="Stretch" Margin="10,270,10,120" VerticalAlignment="Stretch" Foreground="Black" FontSize="16"  BorderBrush="Black" SelectionChanged="LsvDSNCC_SelectionChanged" >
