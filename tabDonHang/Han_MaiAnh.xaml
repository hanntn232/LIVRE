                    </Grid>
                </TabItem>
            </dragablz:TabablzControl>

        </Grid>

        <Grid Margin="60,70,0,0" x:Name="GridKhachHang" Visibility="Collapsed">
            <dragablz:TabablzControl Margin="0,-26,0,0" FixedHeaderCount="1">
                <dragablz:TabablzControl.InterTabController>
                    <dragablz:InterTabController/>
                </dragablz:TabablzControl.InterTabController>
                <TabItem Header="DANH SÁCH KHÁCH HÀNG">
                    <Grid>
                        <ListView x:Name="LsvKhachHang" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1100" Margin="10,90,10,0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="STT" Width="60" DisplayMemberBinding="{Binding STT}"/>
                                    <GridViewColumn Header="Tên khách hàng" Width="200" DisplayMemberBinding="{Binding TenKhachHang}"/>
                                    <GridViewColumn Header="Số điện thoại" Width="150" DisplayMemberBinding="{Binding SoDienThoai}"/>
                                    <GridViewColumn Header="Địa chỉ" Width="200" DisplayMemberBinding="{Binding DiaChi}"/>
                                    <GridViewColumn Header="Tổng tiền đã mua" Width="180" DisplayMemberBinding="{Binding TongTienDaMua}"/>
                                    <GridViewColumn Header="Loại Khách Hàng" Width="150" DisplayMemberBinding="{Binding PhanLoaiKH}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <TextBox x:Name="txtTimKiem" HorizontalAlignment="Left" Height="28" Margin="700,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="152" FontSize="14"  RenderTransformOrigin="0.366,0.654" />
                        <Button x:Name="btnTimKiem_KH" Content="Tìm kiếm" HorizontalAlignment="Stretch" Margin="450,-30,378,490" VerticalAlignment="Stretch" Height="30" FontSize="14" Width="150"   Click="btnTimKiemKH_Click"/>
                        <Label Content="Nhập số điện thoại" HorizontalAlignment="Left" Margin="700,60,0,0" VerticalAlignment="Top" Height="34" Width="174" Foreground="#FF969191" FontStyle="Italic"/>
                        <Button x:Name="btnHuyTimKiem_KH" Content="Hủy tìm kiếm" HorizontalAlignment="Stretch" Margin="870,-30,99,490" VerticalAlignment="Stretch" Height="30" FontSize="14" Width="150"  Click="btnHuyTimKiemKH_Click" RenderTransformOrigin="0.5,0.505"/>
                        <Button x:Name="btnXuatDS" Content="Xuất danh sách" HorizontalAlignment="Stretch" Margin="450,500,378,0" VerticalAlignment="Stretch" Height="30" FontSize="14" Width="150"  Click="BtnXuatDS_Click"/>
                        <Label Content="      Gold" HorizontalAlignment="Left" Margin="62,427,0,0" VerticalAlignment="Top" Height="36" Width="133" Foreground="Black" Background="#FFFFD300" FontSize="20"/>
                        <Label Content="      Silver" HorizontalAlignment="Left" Margin="62,470,0,0" VerticalAlignment="Top" Height="36" Width="133" Foreground="Black" FontSize="20">
                            <Label.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFAEB2B2" Offset="0"/>
                                    <GradientStop Color="#FFEAF6F5" Offset="1"/>
                                </LinearGradientBrush>
                            </Label.Background>
                        </Label>
                        <Label Content="      Normal" HorizontalAlignment="Left" Margin="62,511,0,0" VerticalAlignment="Top" Height="36" Width="133" Foreground="Black" FontSize="20" Background="#FFCEA2C2"/>
                        <Label Content="CKTM 30% khi từ 10tr trở lên" HorizontalAlignment="Left" Margin="200,433,0,0" VerticalAlignment="Top" Height="36" Width="208" Foreground="Black" FontStyle="Italic" FontSize="14"/>
                        <Label Content="CKTM 20% khi từ 5tr trở lên" HorizontalAlignment="Left" Margin="200,474,0,0" VerticalAlignment="Top" Height="36" Width="208" Foreground="Black" FontStyle="Italic" FontSize="14"/>
                        <Label Content="CKTM 0% khi dưới 5tr" HorizontalAlignment="Left" Margin="200,515,0,0" VerticalAlignment="Top" Height="36" Width="208" Foreground="Black" FontStyle="Italic" FontSize="14"/>
                    </Grid>
                </TabItem>
            </dragablz:TabablzControl>

        </Grid>

        <Grid Margin="60,70,0,0" x:Name="GridSanPham" Visibility="Collapsed">
            <dragablz:TabablzControl Margin="0,-26,0,0" FixedHeaderCount="2">
                <dragablz:TabablzControl.InterTabController>
                    <dragablz:InterTabController/>
                </dragablz:TabablzControl.InterTabController>
                <TabItem x:Name="tbtSanpham" Header="SẢN PHẨM" FontSize="14">
                    <Grid >
                        <Label Content="Tên sản phẩm" HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top" Width="100"/>
                        <TextBox x:Name="txtTenSanPham" HorizontalAlignment="Left" Margin="153,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                        <Label Content="Mã sản phẩm" HorizontalAlignment="Left" Margin="30,60,0,0" VerticalAlignment="Top" Width="95"/>
                        <TextBox x:Name="txtMaSp" HorizontalAlignment="Left" Margin="153,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                        <Label Content="Tên nhà cung cấp" HorizontalAlignment="Left" Margin="30,90,0,0" VerticalAlignment="Top" Height="26" Width="122"/>
                        <Label Content="Giá gốc" HorizontalAlignment="Left" Margin="320,30,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.58,1.192" Height="26" Width="58"/>
                        <TextBox x:Name="txtGiaGoc" HorizontalAlignment="Left" Margin="400,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.496,-0.13"/>
