                        <RadioButton x:Name="radTM" Content="Tiền mặt" HorizontalAlignment="Left" Margin="361,500,0,0" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1"/>
                    </Grid>
                </TabItem>
            </dragablz:TabablzControl>
        </Grid>

        <Grid Margin="60,70,0,0" x:Name="GridNCC" Visibility="Collapsed" >
            <dragablz:TabablzControl Margin="0,-26,0,0" FixedHeaderCount="2" SelectionChanged="TabablzControl_SelectionChanged">
                <dragablz:TabablzControl.InterTabController>
                    <dragablz:InterTabController/>
                </dragablz:TabablzControl.InterTabController>
                <TabItem x:Name="tabNCC1" Header="DANH SÁCH NHÀ CUNG CẤP" FontSize="14">
                    <Grid>
                        <Label Content="Tên nhà cung cấp" HorizontalAlignment="Left" Margin="100,30,0,398"  RenderTransformOrigin="0.903,-0.074"/>
