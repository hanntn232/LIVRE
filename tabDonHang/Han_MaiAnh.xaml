                        <ListView x:Name="LsvDSHoaDon" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1100" Margin="10,90,10,0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="STT" Width="60" DisplayMemberBinding="{Binding STT}"/>
                                    <GridViewColumn Header="Mã đơn hàng" Width="120" DisplayMemberBinding="{Binding MaDH}"/>
                                    <GridViewColumn Header="Tên khách hàng" Width="140" DisplayMemberBinding="{Binding TenKhachHang}"/>
                                    <GridViewColumn Header="Số điện thoại" Width="120" DisplayMemberBinding="{Binding SoDienThoai}"/>
                                    <GridViewColumn Header="Địa chỉ" Width="160" DisplayMemberBinding="{Binding DiaChi}"/>

