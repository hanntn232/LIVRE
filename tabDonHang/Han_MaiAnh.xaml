                                    <GridViewColumn Header="Thành tiền" Width="100" DisplayMemberBinding="{Binding ThanhTien_HD}"/>
                                    <GridViewColumn Header="Ngày mua" Width="100" DisplayMemberBinding="{Binding NgayMua}"/>
                                    <GridViewColumn Header="Phương thức thanh toán" Width="180" DisplayMemberBinding="{Binding PhuongThucThanhToan}"/>
                                </GridView>
                            </ListView.View>
