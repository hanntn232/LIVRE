                        <Image x:Name="Img" Margin="600,10,276,424.333" Width="120" Height="120"/>
                        <TextBox x:Name="txtImg_Internet" HorizontalAlignment="Left" Margin="820,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="275"/>

                    </Grid>

                </TabItem>
                <TabItem x:Name="tabNhapHang" Header="NHẬP HÀNG" FontSize="14">
                    <Grid>
                        <Label Content="Thông tin Nhà cung cấp" HorizontalAlignment="Left" Margin="61,60,0,0" VerticalAlignment="Top" FontSize="14" Grid.Column="1"/>
                        <Button x:Name="btnHuyNhapHang" Content="Hủy" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" FontSize="16" Width="100"  Margin="65,100,0,0" Click="btnHuyNhapHang_Click"/>
                        <ComboBox x:Name="cboChonNCC" ItemsSource="{Binding listtab2}" HorizontalAlignment="Left" Margin="255,60,0,0" VerticalAlignment="Top" Width="200" SelectionChanged="cboChonNCC_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TenNCC}"></TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <ListBox x:Name="listboxSP" ItemsSource="{Binding List_lboSP}" HorizontalAlignment="Left" Margin="780,30,0,0" VerticalAlignment="Top" Width="300" Height="120" SelectionChanged="listboxSP_SelectionChanged" SelectionMode="Extended" Grid.RowSpan="2">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Margin="3" Width="30" Source="{Binding Hinh}"/>
                                        <TextBlock Margin="3" Text="{Binding TenSanPham}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Label Content="Thông tin Sản phẩm" HorizontalAlignment="Left" Margin="600,30,0,0" VerticalAlignment="Top" FontSize="14" Grid.Column="1" Grid.RowSpan="2"/>
                        <Button x:Name="btntabNhapHang" Content="Nhập kho" HorizontalAlignment="Left" Margin="850,530,0,0" VerticalAlignment="Top" Height="30" FontSize="16" Width="150" Click="btntabNhapHang_Click" Grid.Column="1" Grid.Row="1"/>
                        <Label Content="Thanh toán" HorizontalAlignment="Left" Margin="61,470,0,0" VerticalAlignment="Top" FontSize="20" Grid.Column="1" Grid.Row="1"/>
                        <Label Content="Hình thức thanh toán" HorizontalAlignment="Left" Margin="61,500,0,0" VerticalAlignment="Top" FontSize="14" Grid.Column="1" Grid.Row="1"/>
                        <Label Content="Tổng tiền" HorizontalAlignment="Left" Margin="61,530,0,0" VerticalAlignment="Top" FontSize="14" Grid.Column="1" Grid.Row="1"/>
                        <TextBlock x:Name="tbkTongtien" HorizontalAlignment="Left" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Grid.Column="1" Margin="221,535,0,0" Grid.Row="1"/>
