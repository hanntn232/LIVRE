                        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Margin="700,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="154" FontSize="14" />
                        <Button x:Name="btnSearch" Content="Tìm kiếm" HorizontalAlignment="Stretch" Margin="450,-30,378,490" VerticalAlignment="Stretch" Height="30" FontSize="14" Width="150"  Click="btnTimKiem_Click"/>
                        <Label Content="Nhập số điện thoại" HorizontalAlignment="Left" Margin="700,60,0,0" VerticalAlignment="Top" Height="34" Width="174" Foreground="#FF969191" FontStyle="Italic"/>
