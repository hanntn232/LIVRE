                        <Label x:Name="lblChietKhau" HorizontalAlignment="Left" Height="26" Margin="820,500,0,0" VerticalAlignment="Top" Width="126" FontSize="14" />
                        <Label Content="Loại Khách hàng" HorizontalAlignment="Left" Margin="89,150,0,0" VerticalAlignment="Top" Width="116" FontSize="14"/>
