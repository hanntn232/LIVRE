                        <TextBox x:Name="txtMaDon"  HorizontalAlignment="Left" Margin="255,30,0,0" VerticalAlignment="Top" FontSize="14" Width="200" Grid.Column="1" Grid.Row="1"/>

                        <ListView x:Name="LsvDSNhapKho" HorizontalAlignment="Stretch" Margin="10,170,10,120" VerticalAlignment="Stretch" Foreground="Black" FontSize="16"  BorderBrush="White" SelectionChanged="LsvDSNhapKho_SelectionChanged" Grid.ColumnSpan="2" Grid.Row="1" >
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Mã sản phẩm" Width="150" DisplayMemberBinding="{Binding MaSanPham}"/>
