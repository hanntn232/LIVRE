                        <TextBox x:Name="txtGiaBan" HorizontalAlignment="Left" Margin="400,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                        <ListView x:Name="LsvSanPham" HorizontalAlignment="Left" Margin="10,200,10,60">
                            <ListView.View>
                                <GridView >
                                    <GridViewColumn Header="STT" Width="60" DisplayMemberBinding="{Binding STT}"/>
                                    <GridViewColumn Header="Hình" Width="60" >
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Image Width="30" Height="30" Source="{Binding Hinh}"></Image>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Tên sản phẩm" Width="180" DisplayMemberBinding="{Binding TenSanPham}"/>
                                    <GridViewColumn Header="Mã sản phẩm " Width="120" DisplayMemberBinding="{Binding MaSanPham}"/>
                                    <GridViewColumn Header="Nhà cung cấp" Width="120" DisplayMemberBinding="{Binding TenNCC}"/>
                                    <GridViewColumn Header="Giá gốc" Width="110" DisplayMemberBinding="{Binding GiaGoc}"/>
                                    <GridViewColumn Header="Giá bán" Width="110" DisplayMemberBinding="{Binding GiaBan}"/>
                                    <GridViewColumn Header="Số lượng nhập" Width="120" DisplayMemberBinding="{Binding SoLuongNhap}"/>
                                    <GridViewColumn Header="Số lượng bán" Width="120" DisplayMemberBinding="{Binding SoLuongBan}"/>
                                    <GridViewColumn Header="Số lượng tồn" Width="120" DisplayMemberBinding="{Binding SoLuongTon}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Button x:Name="btnTao" Content="Tạo sản phẩm mới" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top" Height="30" FontSize="14" Width="150"  Click="btnTao_Click"/>
                        <ComboBox x:Name="cboNCC" ItemsSource="{Binding listtab2}" HorizontalAlignment="Left" Margin="153,90,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboNCC_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TenNCC}"></TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button x:Name="btnXuat" Content=" Xuất Dữ liệu" HorizontalAlignment="Center" Margin="370,550,378,0" VerticalAlignment="Stretch" Height="30" FontSize="14" Width="150" Click="btnXuat_Click"/>
                        <Button x:Name="btnImg_May" Content="Tải từ máy" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="30" FontSize="14" Width="120"  Click="btnImg_May_Click" Margin="966,150,0,0"/>
                        <Button x:Name="btnImg_Internet" Content="Tải từ Internet" HorizontalAlignment="Left" Margin="830,150,0,0" VerticalAlignment="Top" Height="30" FontSize="14" Width="120"  Click="btnImg_Internet_Click"/>
